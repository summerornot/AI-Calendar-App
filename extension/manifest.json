{
  "manifest_version": 3,
  "name": "AI Calendar Assistant",
  "version": "1.0.0",
  "description": "AI-powered tool to instantly add events to Google Calendar from selected text",
  "permissions": [
    "contextMenus",
    "storage",
    "action",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://*.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/ai-calendar-extension"
}
