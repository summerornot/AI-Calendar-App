{
  "manifest_version": 3,
  "name": "Toki – AI Calendar Assistant",
  "version": "1.2.0",
  "description": "Highlight text and let Toki create precise Google Calendar events using AI — fast, multilingual, timezone-aware",
  "permissions": [
    "contextMenus",
    "storage",
    "action",
    "identity",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://ai-calendar-app.onrender.com/*",
    "https://www.googleapis.com/calendar/v3/*"
  ],
  "oauth2": {
    "client_id": "905368676199-t6chres56dm34q38bdc4bua25qnpbe18.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "confirm.html",
      "confirm.js",
      "confirm.css",
      "fonts/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "author": "AI Calendar Team",
  "homepage_url": "https://github.com/summerornot/AI-Calendar-App",
  "minimum_chrome_version": "88"
}
